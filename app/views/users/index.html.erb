<div class="container px-5 px-sm-0">
 <div  class="row">
<%= render 'books/index', user: @user, books: @books, book: @book %>

   <div class="col-md-8 offset-md-1">




 <tr>
  <h2>Users</h2>
  <table class="table table-striped">
   <th>image</th>
   <th>name</th>
   <th colspan="3"></th>

   <% @users.each do |user| %>

   <tr>
     <td><%= image_tag user.get_profile_image(100,100) %></td>

     <td><%= user.name %></td>

     <td>
       <%= link_to user_path(user) do %>
       Show
       <% end %>
     </td>

   </tr>

   <% end %>

  </table>
  </tr>

 </div>
</div>
